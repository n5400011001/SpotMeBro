<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="White"
             NavigationPage.HasBackButton="False"
             x:Class="SpotMeBro.Pages.LoginPage">

    <NavigationPage.TitleView>
        <StackLayout>
            <Label Text="WORKOUT WATCHER"
                   HorizontalOptions="CenterAndExpand"
                   TextColor="White"
                   />
        </StackLayout>
    </NavigationPage.TitleView>

    <ContentPage.Content>
        <StackLayout>
            <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Center" WidthRequest="250">
                <Entry x:Name="usernameX" Placeholder="Enter username" />
                <Entry x:Name="passwordX" Placeholder="Enter password" IsPassword="True"/>
            </StackLayout>
            <StackLayout>
                <StackLayout>
                    <Button Text="LOGIN" 
                            FontSize="Medium" 
                            Clicked="Login_Clicked" 
                            BackgroundColor="CornflowerBlue"
                            TextColor="White"
                            BorderWidth="1"
                            />
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>